#aside-content.aside-content
  //- post
  if is_post()
    - const tocStyle = page.toc_style_simple
    - const tocStyleVal = tocStyle === true || tocStyle === false ? tocStyle : theme.toc.style_simple
    if showToc && tocStyleVal
      .sticky_layout
        include ./card_post_toc.pug
    else
      //- changed to cache false since the content should be different among language settings
      !=partial('includes/widget/card_author', {}, {cache: false})
      !=partial('includes/widget/card_announcement', {}, {cache: false})
      !=partial('includes/widget/card_top_self', {}, {cache: false})
      .sticky_layout
        if showToc
          include ./card_post_toc.pug
        if page.series
          include ./card_post_series.pug
        //- changed to cache false since the content should be different among language settings
        !=partial('includes/widget/card_recent_post', {}, {cache: false})
        !=partial('includes/widget/card_ad', {}, {cache: false})
  else
    //- page
    //- changed to cache false since the content should be different among language settings
    !=partial('includes/widget/card_author', {}, {cache: false})
    !=partial('includes/widget/card_announcement', {}, {cache: false})
    !=partial('includes/widget/card_top_self', {}, {cache: false})

    .sticky_layout
      if showToc
        include ./card_post_toc.pug
      //- changed to cache false since the content should be different among language settings
      !=partial('includes/widget/card_recent_post', {}, {cache: false})
      !=partial('includes/widget/card_ad', {}, {cache: false})
      !=partial('includes/widget/card_newest_comment', {}, {cache: false})
      !=partial('includes/widget/card_categories', {}, {cache: false})
      !=partial('includes/widget/card_tags', {}, {cache: false})
      !=partial('includes/widget/card_archives', {}, {cache: false})
      !=partial('includes/widget/card_webinfo', {}, {cache: false})
      !=partial('includes/widget/card_bottom_self', {}, {cache: false})